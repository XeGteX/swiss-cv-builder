
{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "outDir": "./dist-server",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react-jsx",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "types": [
            "node",
            "express"
        ]
    },
    "include": [
        "server/**/*",
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "dist-server"
    ]
}
